@model PositionViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>Update @Model.Name</h2>

<form asp-action="Update" asp-controller="Position">
  <div class="form-group">
    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="KillCoefficient" class="control-label">Kill Coefficient</label>
    <input type="text" asp-for="KillCoefficient" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="DeathCoefficient" class="control-label">Death Coefficient</label>
    <input type="text" asp-for="DeathCoefficient" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="AssistCoefficient" class="control-label">Assist Coefficient</label>
    <input type="text" asp-for="AssistCoefficient" class="form-control" />
  </div>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <button asp-action="Update" asp-controller="Position" type="submit" class="btn btn-outline-dark">Save</button>
    </div>
    <a asp-action="Info/@Model.Id" asp-controller="Position" class="btn btn-outline-dark">Back</a>
  </div>
</form>