@model PlayerViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>@Model.Name @Model.Nickname @Model.Lastname</h2>

<div class="container">
  <dl class="dl-horizontal">
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Nickname</dt>
    <dd>@Model.Nickname</dd>
    <dt>Lastname</dt>
    <dd>@Model.Lastname</dd>
    <dt>Position</dt>
    <dd>@Model.Position</dd>
    <dt>Team</dt>
    <dd>@Model.Team</dd>
  </dl>
  <div class="btn-group btn-group-justified">
    <a asp-action="Update" asp-controller="Player" asp-route-id="@Model.Id" class="btn btn-default">Update</a>
    <a asp-action="Delete" asp-controller="Player" asp-route-id="@Model.Id" class="btn btn-default">Delete</a>
    <a asp-action="Index" asp-controller="Player" class="btn btn-default">Back</a>
  </div>
</div>