@model PlayerViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>@Model.Name @Model.Nickname @Model.Lastname</h2>

<div class="container">
  <dl class="row">
    <dt class="col-sm-2">Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Nickname:</dt>
    <dd class="col-sm-10">@Model.Nickname</dd>
    <dt class="col-sm-2">Lastname:</dt>
    <dd class="col-sm-10">@Model.Lastname</dd>
    <dt class="col-sm-2">Position:</dt>
    <dd class="col-sm-10">@Model.Position</dd>
    <dt class="col-sm-2">Team:</dt>
    <dd class="col-sm-10">@Model.Team</dd>
  </dl>
  <div class="btn-group btn-group-justified">
    <a asp-action="Update" asp-controller="Player" asp-route-id="@Model.Id" class="btn btn-outline-dark">Update</a>
    <a asp-action="Delete" asp-controller="Player" asp-route-id="@Model.Id" class="btn btn-outline-dark">Delete</a>
    <a asp-action="Index" asp-controller="Player" class="btn btn-outline-dark">Back</a>
  </div>
</div>