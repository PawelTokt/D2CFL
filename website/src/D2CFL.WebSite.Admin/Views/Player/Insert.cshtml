@model PlayerViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>Add new player</h2>

<form asp-action="Insert" asp-controller="Player">
  <div class="form-group">
    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Nickname" class="control-label">Nickname</label>
    <input type="text" asp-for="Nickname" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Lastname" class="control-label">Lastname</label>
    <input type="text" asp-for="Lastname" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Position" class="control-label">Position</label>
    <select asp-for="Position" class="form-control" asp-items="@ViewBag.Positions">
      <option>---Select---</option>
    </select>
  </div>
  <div class="form-group">
    <label asp-for="Team" class="control-label">Team</label>
    <select asp-for="Team" class="form-control" asp-items="@ViewBag.Teams">
      <option>---Select---</option>
    </select>
  </div>
  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-default" />
  </div>
  <a asp-action="Index" asp-controller="Player" class="btn btn-default">Back</a>
</form>