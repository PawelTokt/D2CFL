@model TeamViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>Update @Model.Name</h2>

<form asp-action="Update" asp-controller="Team">
  <div class="form-group">
    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Region" class="control-label">Nickname</label>
    <input type="text" asp-for="Region" class="form-control" />
  </div>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <button asp-action="Update" asp-controller="Team" type="submit" class="btn btn-default">Save</button>
    </div>
    <a asp-action="Index" asp-controller="Team" class="btn btn-default">Back</a>
  </div>
</form>