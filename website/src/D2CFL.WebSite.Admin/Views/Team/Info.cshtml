@model TeamViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>@Model.Name</h2>

<div class="container">
  <dl class="row">
    <dt class="col-sm-2">Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Region:</dt>
    <dd class="col-sm-10">@Model.Region</dd>
  </dl>
  <div class="btn-group btn-group-justified">
    <a asp-action="Update" asp-controller="Team" asp-route-id="@Model.Id" class="btn btn-outline-dark">Update</a>
    <a asp-action="Delete" asp-controller="Team" asp-route-id="@Model.Id" class="btn btn-outline-dark">Delete</a>
    <a asp-action="Index" asp-controller="Team" class="btn btn-outline-dark">Back</a>
  </div>
</div>