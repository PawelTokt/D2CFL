@model TeamViewModel

@{
  ViewData["Title"] = "D2CFL.Admin";
}

<h2>Add new team</h2>

<form asp-action="Insert" asp-controller="Team">
  <div class="form-group">
    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Region" class="control-label">Region</label>
    <input type="text" asp-for="Region" class="form-control" />
  </div>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <button asp-action="Insert" asp-controller="Team" type="submit" class="btn btn-outline-dark">Save</button>
    </div>
    <a asp-action="Index" asp-controller="Team" class="btn btn-outline-dark">Back</a>
  </div>
</form>